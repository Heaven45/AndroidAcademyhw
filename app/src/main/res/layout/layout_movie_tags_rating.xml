<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_tagline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/tags"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Action, Adventure, Fantasy" />

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_tagline"
        android:layout_marginTop="8dp"
        android:isIndicator="true"
        android:minHeight="12dp"
        android:numStars="5"
        android:progressDrawable="@drawable/custom_ratingbar"
        android:stepSize="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_tagline"
        tools:rating="4" />

    <TextView
        android:id="@+id/text_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_tagline"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/rating_bar"
        android:textAllCaps="true"
        android:textColor="@color/reviews"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rating_bar"
        app:layout_constraintStart_toEndOf="@+id/rating_bar"
        app:layout_constraintTop_toTopOf="@+id/rating_bar"
        tools:text="125 Reviews"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/rating_bar" />

</RelativeLayout>